---
import BaseHead from "../components/shared/BaseHead.astro";
import Header from "../components/shared/Header.astro";
import Footer from "../components/shared/Footer.astro";

const { title, description, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="dark:from-zinc-800 dark:to-zinc-900 bg-gradient-to-l from-zinc-50 to-zinc-100 text-white">
    <Header />

    <main class="grid grid-cols-6 gap-4 w-11/12 space-x-2 mx-auto my-6">
      <div class="col-span-6 md:col-span-4">
        <article class="prose dark:prose-headings:text-zinc-200 dark:prose-p:text-neutral-400 max-w-none">
          {
            heroImage && (
              <img
                width={800}
                height={400}
                class="border-b-2 border-t-2 border-t-teal-600 border-pink-600 aspect-video"
                src={heroImage}
                alt="title"
              />
            )
          }
          <slot />
        </article>
      </div>
      <div class="col-span-2 bg-slate-300"></div>
    </main>
    <Footer />
  </body>
</html>
